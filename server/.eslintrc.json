{
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
        "semi": ["error"],
        "prefer-const": "error",
        "indent": ["error", 4],
        "eqeqeq": "error",
        "strict": ["error", "function"],
        "no-var": "error",
        "camelcase": "error",
        "comma-dangle": ["error"],
        "comma-style": ["error"],
        "no-trailing-spaces": "error",
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true,
            "avoidEscape": true 
        }]
    },
    "globals": {
      "describe": "readonly",
      "it": "readonly",
      "after": "readonly"
  }
}